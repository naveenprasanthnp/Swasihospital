@model SwasiHealthCare.Model.PatientPlanSubscriptionModel
@{
    ViewBag.Title = "New Plan";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    var planlist = new SelectList(ViewBag.planlist, "PlanId", "PackageCode");
    var patientlist = new SelectList(ViewBag.patientlist, "PatientId", "PatientIdNumber");
}

<html>
<head>
    <link rel="stylesheet" href="~/Theme/Html/assets/vendor/dropify/css/dropify.min.css">
    <link rel="stylesheet" href="~/Theme/Html/assets/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.min.css">
</head>
<body>
    <div class="card w-100 shadow-sm border-0">
        <div class="card-body p-3">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="" id="nav-newsystem" role="tabpanel" aria-labelledby="nav-orginal-tab" style="overflow-y: auto;">
                            <div class="card-body">
                                <div class="form-row">
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                        @Html.Label("Subscription Date", "Subscription Date")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.PatientPlanSubscriptionDate, new { @class = "form-control input-default borderclr", data_provide = "datepicker", data_date_autoclose = "true", id = "txtsubscriptiondate" })
                                        @Html.ValidationMessageFor(model => model.PatientPlanSubscriptionDate, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                        @Html.Label("Patient", "Patient")<span style="padding-left:2px;color:red">*</span>
                                        @Html.DropDownListFor(model => model.PatientId, patientlist, "--Select Patient--", new { @class = "form-control input-default borderclr", id = "txtpatientid" })
                                        @Html.ValidationMessageFor(model => model.PatientId, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                        @Html.Label("Plan", "Plan")<span style="padding-left:2px;color:red">*</span>
                                        @Html.DropDownListFor(model => model.PlanId, planlist, "--Select Plan--", new { @class = "form-control input-default borderclr", id = "txtplanId" })
                                        @Html.ValidationMessageFor(model => model.PlanId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row mt-1" style="padding-left: 1.25rem;">
                        <div class="form-group col-lg-3 col-md-6 col-sm-12">
                            <a href="@Url.Action("IndexSubscription","Settings")" class="btn btn-outline-danger borderradius">Back</a>
                            <button type="submit" id="btnplansubs" class="btn btn-outline-primary borderradius">Submit</button>
                            <button type="reset" class="btn btn-outline-secondary borderradius">Clear</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
@section scripts {
    <script src="~/Scripts/Plan/Plan.js"></script>
    <script src="~/Theme/Html/assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="~/Theme/Html/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var date = '@Model.PatientPlanSubscriptionDate';
            alert(date);
            $("#txtsubscriptiondate").val(date);
            $("#page_name").text("Edit Subscription,");
        });
    </script>
}

