@model SwasiHealthCare.Model.LoginModel
@{
    ViewBag.Title = "Forgot your password?";
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <section class="login-block" id="login-page" style="align-items:center; display:flex;">
        <div class="container" style="min-width:300px; max-width:350px;">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 forgot">
                    <div class="text-center" style="border-bottom: 3px solid #009C4F;">
                        <img style="max-width:50%;margin:0 auto;" src="~/Images/login-logo.jpg" />
                    </div>
                    <h2 class="mt-3 text-center title-secondary-head signupLink" style="color:#484848; font-size:20px; font-weight:600;">Forgot Password</h2>
                    @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group" style="color:#969696;">
                            @Html.Label("UserName", "Email")<span style="padding-left:2px;color:red">*</span>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-sm form_box UserEmail1", MaxLength = 50, id = "textUserEmail" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-check text-center p-0 row justify-content-center">
                            <a href="@Url.Action("Login", "Home")" class="btn btn-sm btn-danger rounded text-white">Back</a>
                            <button type="submit" id="btnForgotLoginSubmit" class="btn btn-sm btn-success border-0 ml-3 rounded text-white" style="font-weight: 600;" onclick="Login()">Submit</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
@section Scripts {
  
}
