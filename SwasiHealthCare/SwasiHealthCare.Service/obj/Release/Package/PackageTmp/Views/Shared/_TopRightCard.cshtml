                    <h5 class="mb-0">@Model.opdmonthcount</h5>
                </div>
                @*<div class="mb-3 mb-xl-0">
                    <p class="text-muted mb-1">Revenue <span id="mini-bar-chart1" class="mini-bar-chart"></span></p>
                    <h5 class="mb-0">@Model.revenuecurrentmonth</h5>
                </div>*@
