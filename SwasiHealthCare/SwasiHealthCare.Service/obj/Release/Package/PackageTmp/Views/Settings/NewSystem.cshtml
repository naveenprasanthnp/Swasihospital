@model SwasiHealthCare.Model.SystemViewModel
@{
    ViewBag.Title = "New System";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<html>
<head>
</head>
<body>
    <div class="card w-100 shadow-sm border-0">
        <div class="card-body p-3">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="" id="nav-newsystem" role="tabpanel" aria-labelledby="nav-orginal-tab" style="overflow-y: auto;">
                            <div class="card-body">
                                <div class="form-row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-sticky-note" aria-hidden="true"></i>
                                        @Html.Label("System Name", "System Name")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.SystemName, new { @class = "form-control input-default borderclr", Maxlength = 50, id = "txtsystemname" })
                                        @Html.ValidationMessageFor(model => model.SystemName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-address-book" aria-hidden="true"></i>
                                        @Html.Label("SystemIp", "SystemIp")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.SystemIp, new { @class = "form-control input-default borderclr",Maxlength = 15, id = "txtsystemip" })
                                        @Html.ValidationMessageFor(model => model.SystemIp, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-laptop" aria-hidden="true"></i>
                                        @Html.Label("System Model", "System Model")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.SystemModel, new { @class = "form-control input-default borderclr", Maxlength = 30, id = "txtsystemmodel" })
                                        @Html.ValidationMessageFor(model => model.SystemModel, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row mt-1" style="padding-left: 1.25rem;">
                        <div class="form-group col-lg-3 col-md-6 col-sm-12">
                            <a href="@Url.Action("Index","Settings")" class="btn btn-outline-danger borderradius">Back</a>
                            <button type="submit" id="btnSystemSave" class="btn btn-outline-primary borderradius">Submit</button>
                            <button type="reset" class="btn btn-outline-secondary borderradius">Clear</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
@section scripts {
    <script src="~/Scripts/System/System.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#page_name").text("New System,");
        });
    </script>
}

