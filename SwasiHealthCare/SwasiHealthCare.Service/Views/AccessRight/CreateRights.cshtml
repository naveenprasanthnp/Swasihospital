                //    type: 'GET',
                //    url: '/AccessRight/CreateRights',
                //    data: { 'userid': staffid, 'dropdowncall': true },
                //    contentType: 'application/json; charset=utf-8',
                //    datatype: 'json',
                //    success: function (userid) {
                //        alert(userid);
                //    },
                //    error: function (result) {

                //    }
                //});
            });
        });
    </script>
}