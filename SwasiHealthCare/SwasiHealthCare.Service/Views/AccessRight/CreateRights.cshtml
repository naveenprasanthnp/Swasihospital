
@model List<SwasiHealthCare.Model.RightsManagementModel>
@{
    ViewBag.Title = "New Patient";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    var userlist = new SelectList(ViewBag.userlist, "UserId", "FullName");
}
<body>
    <div class="row clearfix" id="checkboxes">
        <div class="col-12">
            <div class="tab-content">
                @using (Html.BeginForm())
                {
                    <div class="tab-pane active show">
                        <div class="card">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-4">
                                        Roles & Permissions
                                    </div>
                                    <div class="col-8">
                                        <div class="form-group float-right">
                                            <div class="row">
                                                <div class="col-5">
                                                    <i class="fa fa-envelope" aria-hidden="true"></i>
                                                    @Html.Label("Staff", "Staff Name")<span style="padding-left:2px;color:red">*</span>
                                                </div>
                                                <div class="col-7">
                                                    @Html.DropDownListFor(model => model.FirstOrDefault().UserId, userlist, "Select Staff", new { @class = "form-control input-default borderclr", id = "txtuserid" })
                                                    @Html.ValidationMessageFor(model => model.FirstOrDefault().UserId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            </div>
                                        </div>
                                    </div>
                                @*<div id="okmsg"><span >@ViewBag.successmessage</span></div>*@
                                </div>
                            <div class="body">
                                <div class="table-responsive">
                                    <table class="table table-striped mb-0" id="sam ">
                                        <thead>
                                            <tr style=" background: linear-gradient(45deg, #72b541, #0c0c0c) ; color:white">
                                                <th>Module Permission</th>
                                                <th>Create</th>
                                                <th>View</th>
                                                <th>Edit</th>
                                                <th>Delete</th>
                                            </tr>
                                        </thead>
                                        @{
                                            var i = 1;
                                            if(Model !=null)
                                            {
                                                foreach (var item in Model)
                                                {
                                                <tbody>
                                                    @if (i % 2 == 0)
                                                    {
                                                        <tr style="background-color: white; ">
                                                            <td>@item.MenuName</td>
                                                            <td>
                                                                @if (item.IsCreate == true)
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" checked value="@item.MenuId@item.IsCreate" />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                                else
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" value="@item.MenuId@item.IsCreate" />
                                                                        <span class="custom-control-label">&nbsp;</span>

                                                                    </label>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (item.IsView == true)
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" checked value="@item.MenuId@item.IsView" />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                                else
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" value="@item.MenuId@item.IsView" />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (item.IsEdit == true)
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" checked value="@item.MenuId@item.IsEdit" />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                                else
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" value="@item.MenuId@item.IsEdit" />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (item.IsDelete == true)
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" checked value="@item.MenuId@item.IsDelete " />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                                else
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" value="@item.MenuId@item.IsDelete " />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                            </td>
                                                        </tr>
                                                        i++;
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td>@item.MenuName</td>
                                                            <td>
                                                                @if (item.IsCreate == true)
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" checked="" value="@item.MenuId@item.IsCreate" />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                                else
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" value="@item.MenuId@item.IsCreate" />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (item.IsView == true)
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" checked value="@item.MenuId@item.IsView" />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                                else
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" value="@item.MenuId@item.IsView" />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (item.IsEdit == true)
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" checked value="@item.MenuId@item.IsEdit" />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                                else
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" value="@item.MenuId@item.IsEdit" />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (item.IsDelete == true)
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" checked value="@item.MenuId@item.IsDelete" />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                                else
                                                                {
                                                                    <label class="custom-control custom-checkbox">
                                                                        <input type="checkbox" name="rights[]" class="custom-control-input" value="@item.MenuId@item.IsDelete" />
                                                                        <span class="custom-control-label">&nbsp;</span>
                                                                    </label>
                                                                }
                                                            </td>
                                                        </tr>
                                                        i++;
                                                    }
                                                </tbody>
                                                }
                                            }
                                            }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="button" id="btnrightssave" class="btn-sm  btn btn-outline-primary borderradius">Submit</button>
                }
            </div>
        </div>
    </div>
</body>
@section scripts {
    <script>
        $(document).ready(function () {
            //setTimeout(function () {
                
            //    $('#okmsg').hide();
            //}, 3000); 

            $("#page_name").text("Roles & Permissions,");
            $("#btnrightssave").click(function ()
            {
                var staffid = $("#txtuserid").val();
                if ($.trim(staffid) === '') {
                    ShowErrorMessage("Please select staff.");
                    $("#staffid").focus();
                    return false;
                    allfill = false;
                }

                 
                var sList = "";
                debugger;
                $('input[type=checkbox]').each(function () {
                    sList += "" + $(this).val() + "-" + (this.checked) + ",";
                });
                console.log(sList);

                $.ajax({
                    type: 'POST',
                    url: '/AccessRight/CreateRights',
                    data: JSON.stringify({ 'docsToDelete': sList, 'staffid': staffid}),
                    contentType: 'application/json; charset=utf-8',
                    datatype: 'json',
                    success: function (result) { 
                        ShowSuccessMessage("Successfully updated..");
                    },
                    error: function (result) {
                        
                    }
                });
            });
            $("#txtuserid").change(function () {
                debugger;
                var staffid = $("#txtuserid").val();
                window.location.href = "/AccessRight/CreateRights?userid=" + staffid
