@model SwasiHealthCare.Model.TreatmentModel
@{
    ViewBag.Title = "New Treatment";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<html>
<head>
</head>
<body>
    <div class="card w-100 shadow-sm border-0">
        <div class="card-body p-3">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="" id="nav-newsystem" role="tabpanel" aria-labelledby="nav-orginal-tab" style="overflow-y: auto;">
                            <div class="card-body">
                                <div class="form-row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-address-book" aria-hidden="true"></i>
                                        @Html.Label("Treatment Name", "Treatment Name")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.TreatmentName, new { @class = "form-control input-default borderclr", Maxlength = 30, id = "txttreatmentName" })
                                        @Html.ValidationMessageFor(model => model.TreatmentName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-clock-o" aria-hidden="true"></i>
                                        @Html.Label("Treatment Duration", "Duration")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.TreatmentDuration, new { @class = "form-control input-default borderclr", Maxlength =20, id = "txttreatmentduration" })
                                        @Html.ValidationMessageFor(model => model.TreatmentDuration, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-sticky-note" aria-hidden="true"></i>
                                        @Html.Label("TreatmentDescription", "Description")
                                        @Html.TextBoxFor(model => model.TreatmentDescription, new { @class = "form-control input-default borderclr", Maxlength = 255, id = "txttreatmentdescription" })
                                        @Html.ValidationMessageFor(model => model.TreatmentDescription, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-medkit" aria-hidden="true"></i>
                                        @Html.Label("TreatmentMedicineNeeded", "Medicine Needed")
                                        @Html.TextBoxFor(model => model.TreatmentMedicineNeeded, new { @class = "form-control input-default borderclr", Maxlength = 155, id = "txttreatmentmedicineneeded" })
                                        @Html.ValidationMessageFor(model => model.TreatmentMedicineNeeded, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-rupee" aria-hidden="true"></i>
                                        @Html.Label("TreatmentCharges", "Fee")
                                        @Html.TextBoxFor(model => model.TreatmentCharges, new { @class = "form-control input-default borderclr", Maxlength = 5, id = "txttreatmentcharges" })
                                        @Html.ValidationMessageFor(model => model.TreatmentCharges, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row mt-1" style="padding-left: 1.25rem;">
                        <div class="form-group col-lg-3 col-md-6 col-sm-12">
                            <a href="@Url.Action("Index","Treatment")" class="btn btn-sm btn-outline-danger borderradius">Back</a>
                            <button type="submit" id="btnTreatmentSave" class="btn btn-sm btn-outline-primary borderradius">Submit</button>
                            <button type="reset" class="btn btn-outline-secondary btn-sm borderradius">Clear</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
@section scripts {
    <script src="~/Scripts/Treatment/Treatment.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#page_name").text("New Treatment,");
        });
    </script>
}

