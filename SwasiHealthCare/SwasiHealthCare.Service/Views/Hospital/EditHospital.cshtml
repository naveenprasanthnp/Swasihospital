@model SwasiHealthCare.Model.HospitalModel
@{
    ViewBag.Title = "New Hospital";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<html>
<head>
</head>
<body>
    <div class="card w-100 shadow-sm border-0">
        <div class="card-body p-3">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="" id="nav-newsystem" role="tabpanel" aria-labelledby="nav-orginal-tab" style="overflow-y: auto;">
                            <div class="card-body">
                                @Html.HiddenFor(model=>model.HospitalId)
                                <div class="form-row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-sort-numeric-asc" aria-hidden="true"></i>
                                        @Html.Label("HospitalCode", "Hospital Code")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.HospitalCode, new { @class = "form-control input-default borderclr", Maxlength = 20, id = "txthospitalcode" })
                                        @Html.ValidationMessageFor(model => model.HospitalCode, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-address-book" aria-hidden="true"></i>
                                        @Html.Label("HospitalName", "Hospital Name")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.HospitalName, new { @class = "form-control input-default borderclr", Maxlength = 30, id = "txthospitalname" })
                                        @Html.ValidationMessageFor(model => model.HospitalName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-phone" aria-hidden="true"></i>
                                        @Html.Label("HospitalMobilNumber", "Mobil Number")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.HospitalMobilNumber, new { @class = "form-control input-default borderclr", Maxlength = 10, id = "txthospitalmobilnumber" })
                                        @Html.ValidationMessageFor(model => model.HospitalMobilNumber, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-mobile" aria-hidden="true"></i>
                                        @Html.Label("LandlineNumber", "Landline Number")
                                        @Html.TextBoxFor(model => model.LandlineNumber, new { @class = "form-control input-default borderclr", Maxlength = 10, id = "txtlandlinenumber" })
                                        @Html.ValidationMessageFor(model => model.LandlineNumber, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-navicon" aria-hidden="true"></i>
                                        @Html.Label("HospitalContactPersonName", "Contact Person Name")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.HospitalContactPersonName, new { @class = "form-control input-default borderclr", Maxlength = 30, id = "txthospitalcontactpersonname" })
                                        @Html.ValidationMessageFor(model => model.HospitalContactPersonName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-envelope" aria-hidden="true"></i>
                                        @Html.Label("HospitalContactPersonEmail", "Contact Person Email")
                                        @Html.TextBoxFor(model => model.HospitalContactPersonEmail, new { @class = "form-control input-default borderclr", Maxlength = 30, id = "txthospitalcontactpersonemail" })
                                        @Html.ValidationMessageFor(model => model.HospitalContactPersonEmail, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-envelope-o" aria-hidden="true"></i>
                                        @Html.Label("HospitalEmail", "Email")
                                        @Html.TextBoxFor(model => model.HospitalEmail, new { @class = "form-control input-default borderclr", Maxlength = 30, id = "txthospitalemail" })
                                        @Html.ValidationMessageFor(model => model.HospitalEmail, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-sticky-note" aria-hidden="true"></i>
                                        @Html.Label("PatientIdStartWith", "Patient Id Start With")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.PatientIdStartWith, new { @class = "form-control input-default borderclr", Maxlength = 255, id = "txtpatientidstartwith" })
                                        @Html.ValidationMessageFor(model => model.PatientIdStartWith, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-sticky-note" aria-hidden="true"></i>
                                        @Html.Label("HospitalAddress", "Address")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextAreaFor(model => model.HospitalAddress, new { @class = "form-control input-default borderclr", Maxlength = 255, id = "txthospitaladdress" })
                                        @Html.ValidationMessageFor(model => model.HospitalAddress, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row mt-1" style="padding-left: 1.25rem;">
                        <div class="form-group col-lg-3 col-md-6 col-sm-12">
                            <a href="@Url.Action("Index","Hospital")" class="btn btn-sm btn-outline-danger borderradius">Back</a>
                            <button type="submit" id="btnhospitalsave" class="btn btn-sm btn-outline-primary borderradius">Submit</button>
                            <button type="reset" class="btn btn-outline-secondary btn-sm borderradius">Clear</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
@section scripts {
    <script src="~/Scripts/Hospital/Hospital.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#page_name").text("Edit Hospital,");
        });
    </script>
}

