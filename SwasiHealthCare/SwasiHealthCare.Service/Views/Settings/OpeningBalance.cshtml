@model SwasiHealthCare.Model.OBAndReceiptModel
@{
    ViewBag.Title = "Opening Balance";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<html>
<head>
</head>
<body>
    <div class="card w-100 shadow-sm border-0">
        <div class="card-body p-3">
            @using (Html.BeginForm("OpeningBalance", "Settings", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                    <div class="tab-content" id="nav-tabContent">
                        <div class="" id="nav-newmedicine" role="tabpanel" aria-labelledby="nav-orginal-tab" style="overflow-y: auto;">
                            <h6>Treatment Opening Balance</h6>
                            <div class="card-body">
                                <div class="form-row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                        @Html.Label("Date", "Date")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.TreatmentOpeningBalanceModel.Date, new { @class = "form-control input-default borderclr", data_provide = "datepicker", data_date_autoclose = "true", id = "txttmtobdate" })
                                        @Html.ValidationMessageFor(model => model.TreatmentOpeningBalanceModel.Date, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                        @Html.Label("Amount", "Amount")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.TreatmentOpeningBalanceModel.Amount, new { @class = "form-control input-default borderclr", id = "txttmtobamount" })
                                        @Html.ValidationMessageFor(model => model.TreatmentOpeningBalanceModel.Amount, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <h6>Medicine Opening Balance</h6>
                            <div class="card-body">
                                <div class="form-row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                        @Html.Label("Date", "Date")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.MedicineOpeningBalanceModel.Date, new { @class = "form-control input-default borderclr", data_provide = "datepicker", data_date_autoclose = "true", id = "txtmedobdate" })
                                        @Html.ValidationMessageFor(model => model.MedicineOpeningBalanceModel.Date, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-lg-3 col-md-6 col-sm-12">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                        @Html.Label("Amount", "Amount")<span style="padding-left:2px;color:red">*</span>
                                        @Html.TextBoxFor(model => model.MedicineOpeningBalanceModel.Amount, new { @class = "form-control input-default borderclr", id = "txtmedobamount" })
                                        @Html.ValidationMessageFor(model => model.MedicineOpeningBalanceModel.Amount, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row mt-1" style="padding-left: 1.25rem;">
                        <div class="form-group col-lg-3 col-md-6 col-sm-12">
                            <a href="@Url.Action("IndexOpeningBalance","Settings")" class="btn btn-sm btn-outline-danger borderradius">Back</a>
                            <button type="submit" id="btnopeningabalanceesave" class="btn btn-sm btn-outline-primary borderradius">Submit</button>
                            <button type="reset" class="btn btn-sm btn-outline-secondary borderradius">Clear</button>
                        </div>
                    </div>
            }
        </div>
    </div>
</body>
</html>
@section scripts {
    <script src="~/Theme/Html/assets/vendor/dropify/js/dropify.min.js"></script>
    <script src="~/Theme/Html/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnopeningabalanceesave").attr("disabled", true);
            $("#expense").trigger("click");
            $("#addexpense").addClass("active");
            $("#txtmedicineexpirydate").val('');
            $("#page_name").text("Treatment & Medicine Opening Balance,");            
            $("#txttmtobdate").change(function () {
                var tmtobdate = $("#txttmtobdate").val();
                var tmtobamount = $("#txttmtobamount").val();
                if (tmtobdate != "" && tmtobamount != "") {
                    $("#btnopeningabalanceesave").removeAttr("disabled");
                } else {
                    $("#btnopeningabalanceesave").attr("disabled", true);
                }
            });
            $("#txttmtobamount").change(function () {
                var tmtobdate = $("#txttmtobdate").val();
                var tmtobamount = $("#txttmtobamount").val();
                if (tmtobdate != "" && tmtobamount != "") {
                    $("#btnopeningabalanceesave").removeAttr("disabled");
                } else {
                    $("#btnopeningabalanceesave").attr("disabled", true);
                }
            });
            $("#txtmedobdate").change(function () {
                var tmtobdate = $("#txtmedobdate").val();
                var tmtobamount = $("#txtmedobamount").val();
                if (tmtobdate != "" && tmtobamount != "") {
                    $("#btnopeningabalanceesave").removeAttr("disabled");
                } else {
                    $("#btnopeningabalanceesave").attr("disabled", true);
                }
            });
            $("#txtmedobamount").change(function () {
                var tmtobdate = $("#txtmedobdate").val();
                var tmtobamount = $("#txtmedobamount").val();
                if (tmtobdate != "" && tmtobamount != "") {
                    $("#btnopeningabalanceesave").removeAttr("disabled");
                } else {
                    $("#btnopeningabalanceesave").attr("disabled", true);
                }
            });
             
        });
    </script>
}

